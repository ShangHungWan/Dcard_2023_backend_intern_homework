version: "3.7"
services:
    go:
        image: golang:1.20-alpine
        volumes:
            - ./:/var/www/html
        tty: true
        working_dir: /var/www/html
        ports:
            - "8080:8080"
    db:
        image: postgres:15.2-alpine
        restart: always
        environment:
            POSTGRES_DB: postgres
            POSTGRES_USER: postgres
            POSTGRES_PASSWORD: "1234"
            PGDATA: /var/lib/postgresql/data
        volumes:
            - db-data:/var/lib/postgresql/data
        ports:
            - "5432:5432"
volumes:
    db-data: